@model IEnumerable<POSTest.Modelss.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index2</h1>
<div class="page-header d-md-flex justify-content-between">
    <div>
        <h3>Users</h3>
        <nav aria-label="breadcrumb" class="d-flex align-items-start">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="index" asp-controller="home">Items Management</a>
                </li>
            </ol>
        </nav>
    </div>
    <div class="mt-2 mt-md-0">
        <a asp-action="Create" class="btn btn-success" data-toggle="modal" data-target="#mdlNew" title="Add new item">Add new item</a>
    </div>
</div>
<table class="table">
      <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sizes)
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
 
    <tbody>
@foreach (var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sizes.Count)
                </td>
                
                <td>
                    <div class="dropdown">
                        <a href="#" data-toggle="dropdown"
                       class="btn btn-floating"
                       aria-haspopup="true" aria-expanded="false">
                            <i class="ti-more-alt"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a asp-action="Edit" asp-route-id="@item.ItemId" class="dropdown-item text-success">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.ItemId" class="dropdown-item text-danger">Delete</a>
                        </div>
                    </div>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="mdlNew" class="modal fade modal-item" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">Add new item</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <div id="frmItem">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                         @*   <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>*@
                            <div class="form-group">
                                <label>Item Name</label>
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Picture</label>
                                <input type="file" palceholder="Select image" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row" for="sizes">
                        <div class="col-5">
                            <div class="form-group">
                                <label>Size Name</label>
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label>Size Price</label>
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group" style="margin-top: 17%;">
                                <a href="Javascript:void(0);" class="btn btn-success add-size">Add</a>
                                <a href="Javascript:void(0);" class="btn btn-success remove-size btn-danger">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" id="btnSaveHours" class="btn btn-primary" title="Save">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
